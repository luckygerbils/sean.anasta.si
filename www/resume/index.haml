!!!
%html{html_attrs}
  %head
    %meta(http-equiv="Content-Type" content="text/html;charset=utf-8")
    %title Sean Anastasi - #{page.title}
    %link(rel="stylesheet" type="text/css" href="/css/#{page.style}.css")
  
  %body
    %header
      %nav#links
        %ul
          %li
            %a{:href=>"/resume/",   :class => ('current' if page.style == 'resume')}   Resume
          %li
            %a{:href=>"/projects/", :class => ('current' if page.style == 'projects')} Projects
          %li
            %a{:href=>"/scripts/", :class => ('current' if page.style == 'scripts')}  Scripts
          %li
            %a{:href=>"/other/",   :class => ('current' if page.style == 'other')}    Other
      %h1
        %a(href="/") Sean Anastasi

    %section#contents.content
      =content
    
    %footer
      %a(class="w3c" rel="external" href="http://validator.w3.org/check/referer") HTML 5
      %a(class="w3c" rel="external" href="http://jigsaw.w3.org/css-validator/check/referer?profile=css3") CSS 3

